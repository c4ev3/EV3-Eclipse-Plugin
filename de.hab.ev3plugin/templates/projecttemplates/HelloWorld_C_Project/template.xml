<?xml version="1.0" encoding="ISO-8859-1"?>
<template type="ProjTempl" version="1.0" supplier="Eclipse.org" revision="1.0" author="Bala Torati (Symbian)"
		copyright="Copyright (c) 2007 Symbian Software Limited and others. All rights reserved. This program and the accompanying materials are made available under the terms of the Eclipse Public License v1.0 which accompanies this distribution, and is available athttp://www.eclipse.org/legal/epl-v10.html"
		id="HelloARMWorld_C_Project" label="%HelloWorld.Ctemplate.label" description="%HelloWorld.Ctemplate.description"
		 help="help.html">

	<property-group id="basics" label="%HelloWorld.basics.label" description="%HelloWorld.basics.description" type="PAGES-ONLY" help="help.html">
	   <property id="apiDir"
			label="%EV3Project.apiDir.label"
			description="%EV3Project.apiDir.description"
			type="browsedir"
			pattern=".*"
			default="%EV3Project.apiDir.default"
			hidden="false"
			persist="true"/>
		
		<property id="uploadDir"
			label="%EV3Project.uploadDir.label"
			description="%EV3Project.uploadDir.description"
			type="select"
			pattern=".*"
			default="%EV3Project.selectDir.default"
			hidden="false"
			persist="true">
			<item 
			value="../prjs/SD_Card"
			label="SD-Card">
			</item>
			<item 
			value="../prjs/BrkProg_SAVE"
			label="Internal Storage">
			</item>
			<item 
			value="/media/usb"
			label="Usb Stick">
			</item>
		</property>
		<property id="sourceDir"
				label="%HelloWorld.sourceDir.label"
				description="%HelloWorld.sourceDir.description"
				type="input"
				default="%HelloWorld.sourceDir.default"
				pattern="[a-zA-Z0-9]+"
				mandatory="false"
				persist="true"/>
			
	</property-group>

	<process type="org.eclipse.cdt.managedbuilder.core.NewManagedProject">
		<simple name="name" value="$(projectName)" /> 
		<simple name="artifactExtension" value="" /> 
		<simple name="isCProject" value="true" /> 
	</process>
 		<process type="org.eclipse.cdt.managedbuilder.core.AppendToMBSStringListOptionValues">
		<simple name="projectName" value="$(projectName)" />		
		<complex-array name="resourcePaths">
			<element>
				<simple name="id" value="ilg.gnuarmeclipse.managedbuild.cross.option.assembler.include.paths" />
				<simple-array name="values">
					<element value="&quot;/usr/local/include&quot;" />
					<element value="$(apiDir)" />
				</simple-array>
				<simple name="path" value="" />
			</element>
			<element>
				<simple name="id" value="ilg.gnuarmeclipse.managedbuild.cross.option.c.compiler.include.paths" />
				<simple-array name="values">
					<element value="&quot;/usr/local/include&quot;" />
					<element value="$(apiDir)" />
				</simple-array>
				<simple name="path" value="" />
			</element>
		</complex-array>
	</process>
 	<process type="org.eclipse.cdt.managedbuilder.core.SetMBSStringListOptionValues">
		<simple name="projectName" value="$(projectName)" />		
		<complex-array name="resourcePaths">
			<element>
				<simple name="id" value="ilg.gnuarmeclipse.managedbuild.cross.option.c.linker.libs" />
				<simple-array name="values">
					<element value="libev3api.a" />
				</simple-array>
				<simple name="path" value="" />
			</element> 
		</complex-array>
	</process>
	
	<process type="org.eclipse.cdt.core.CreateSourceFolder">
		<simple name="projectName" value="$(projectName)"/>
		<simple name="path" value="$(sourceDir)"/>
	</process>

	<process type="org.eclipse.cdt.core.CreateFolder">
		<simple name="projectName" value="$(projectName)"/>
		<simple name="path" value="myapps"/>
	</process>

	<process type="org.eclipse.cdt.core.AddFiles">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="files">
			<element>
				<simple name="source" value="src/Basename.c"/>
				<simple name="target" value="$(sourceDir)/$(projectName).c"/>
				<simple name="replaceable" value="true"/>
			</element>
		</complex-array>
	</process>
	<process type="org.eclipse.cdt.core.AddFiles">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="files">
			<element>
				<simple name="source" value="start.lms"/>
				<simple name="target" value="start.lms"/>
				<simple name="replaceable" value="true"/>
			</element>
		</complex-array>
	</process>
	
	<process type="org.eclipse.cdt.ui.OpenFiles">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="files">
			<element>
				<simple name="target" value="$(sourceDir)/$(projectName).c"/>
			</element>
		</complex-array>
	</process>

</template>

